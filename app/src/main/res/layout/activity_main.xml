<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient6"
    tools:context="com.example.azura.powercontrol.MainActivity">

    <RelativeLayout
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#004C70">

        <ImageButton
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:backgroundTint="#004C70"
            android:paddingTop="30dp"
            app:srcCompat="@drawable/info2"
            android:contentDescription="@string/information_app" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/appliances"
            android:textColor="#dee7f4"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/sign_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:backgroundTint="#004C70"
            android:paddingTop="30dp"
            app:srcCompat="@drawable/logout1"
            android:contentDescription="@string/logout" />

    </RelativeLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/relative_layout"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/emergency"
        android:gravity="center">

        <TextView
            android:id="@+id/emergencyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/emergency"
            android:textColor="#dee7f4" />

        <ImageButton
            android:layout_width="60dp"
            android:background="#004C70"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:id="@+id/emergencyImage"
            android:layout_toEndOf="@id/emergencyText"
            android:contentDescription="@string/emergency"
            android:onClick="emergency"
            android:src="@drawable/sos2" />

    </RelativeLayout>

</RelativeLayout>
